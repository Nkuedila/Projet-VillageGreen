{% extends 'base.html.twig' %}

{% block title %}
    Liste des produits de la catégories {{ category.nom }}
    
{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Liste des produits de la catégorie {{ category.nom }} </h1>
        </div class="plaaaf">

        {% for produit in produits %}
            <div class="col-3 mb-3">
                <article class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">{{ produit.nom }}</h2>
                        <img class="card-img-top" src="{{ asset('uploads/produits/' ~ produit.image) }}" alt="{{ category.nom }}" style="width:100%">
                        <p class="card-text"> {{ produit.description }} </p>
{#                         <a href="{{ path('products_details', {'slug': product.slug  })}}" class="btn btn-primary"> Voir les details</a>
 #}                    </div>
                </article>
            </div>
            
        {% endfor %}
        </div>
    </section>
</main>

{% endblock %}