{# {# templates/products/search_results.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h2>Search Results</h2>
    {% if produits is empty %}
        <p>No products found matching your search.</p>
    {% else %}
        <ul>
            {% for produit in produits %}
                <li>
                    <a href="{{ path('products_details', {'slug': produit.slug}) }}">
                        {{ produit.nom }}
                    </a>
                    <div class="col-12">
                        <img src="{{ asset('uploads/Produits/' ~ produit.image) }}" alt="image" style="width:15%">
                        <p> - {{ produit.description }}</p>
                        <p> - {{ produit.prix}}</p>
                    </div>
                    

                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %} 