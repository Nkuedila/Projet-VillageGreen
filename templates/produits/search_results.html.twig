{% extends 'base.html.twig' %}

{% block body %}
    <h2>Search Results</h2>

  {#   <form method="get" action="{{ path('produits_recherche') }}">
        <input type="text" name="search" placeholder="Search for a product..." value="{{ searchTerm }}">
        <button type="submit">Search</button>
    </form> #}

    {% if produits is empty %}
        <p>No products found matching your search.</p>
    {% else %}
        <ul>
            {% for produit in produits %}
                <li>
                    <a href="{{ path('produits_details', {'slug': produit.slug}) }}">
                        {{ produit.nom }}
                    </a>
                    <div class="col-12">
                        <img src="{{ asset('uploads/produits/' ~ produit.image) }}" alt="image" style="width:15%">
                        <p> - {{ produit.description }}</p>
                        <p> - {{ produit.prix}}</p>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
