{% extends 'base.html.twig' %}

{% block title %}titre{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1> Village Green </h1>
                <p>Bienvenue dans notre boutiques</p>
            </div>
           {% for category in categories %}
                {% if category.parent == null %}
                    
                <div class="col-12">
                  
                <h2>{{ category.name }}</h2> 

                </div>
                    
                {% else %}
                    <div class="col-4">
                    <div class="card h-100 ">
                        <div class="card-body">
                          <h3 class="card-title">{{ category.name }}</h3>
                          <a href="{{ path('app_categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir le produits</a>
                        </div>
                      </div>
                    </div>
                {% endif %}
            {% endfor %} 
        </section>
    </main>
  
{% endblock %}
